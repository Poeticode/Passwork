<?xml version='1.0' encoding='utf-8'?>
<widget id="com.silentsilas.pr1vy" version="0.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pr1vy</name>
    <description>An interactive &amp; educational tool for generating passwords</description>
    <author email="me@silentsilas.com" href="https://silentsilas.com">
      Silent Silas
    </author>
    <content src="index.html" />
    <icon density="mdpi" height="180" platform="ios" src="www/statics/icons/apple-touch-icon_180.png" width="180" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="www/statics/icons/Android/Icon-48.png" />
        <icon density="hdpi" src="www/statics/icons/Android/Icon-72.png" />
        <icon density="xhdpi" src="www/statics/icons/Android/Icon-96.png" />
        <icon density="xxhdpi" src="www/statics/icons/Android/Icon-144.png" />
        <icon density="xxxhdpi" src="www/statics/icons/Android/Icon-192.png" />
        <splash qualifier="port-hdpi" src="www/statics/splash/splash_portrait.PNG" />
        <splash qualifier="port-ldpi" src="www/statics/splash/splash_portrait.PNG" />
        <splash qualifier="port-mdpi" src="www/statics/splash/splash_portrait.PNG" />
        <splash qualifier="port-xhdpi" src="www/statics/splash/splash_portrait.PNG" />
        <preference name="SplashScreen" value="screen" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
